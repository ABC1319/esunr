#sidebar {
  position: fixed;
  top: 0;
  left: -300px;
  z-index: 10;
  overflow-y: auto;
  // padding: 1rem 0 2rem 0.5rem
  width: $sidebar-width;
  height: 100%;
  background: $sidebar-background;
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);

  hr {
    margin: 1rem 0;
    width: calc(100% - 0.25rem);
  }

  .toggle-sidebar-info {
    padding-right: 0.5rem;
    display: none;

    span {
      display: inline-block;
      padding: 0 0.6rem;
      height: h = 1.6rem;
      background: $light-blue;
      color: $white;
      line-height: h;
      cursor: pointer;
      transition: all 0.2s ease-in-out;

      &:hover {
        background: $cyan;
      }
    }
  }

  .author-info {
    // margin-left: -0.25rem
    // padding: 0.5rem
    width: 100%;

    &-top {
      padding: 1rem;
      background: url('../../img/shattered-island.gif');
    }

    &-bottom {
      padding: 1rem;
    }

    .follow-button {
      text-align: center;

      a {
        display: inline-block;
        margin-top: 0.2rem;
        padding: 0 1rem;
        height: 1.6rem;
        background: #fff;
        border-radius: 5px;
        color: rgba(0, 0, 0, 0.7);
        text-decoration: none;
        line-height: 1.6rem;

        &:hover {
          background: $theme-button-hover-color;
          color: #fff;
        }
      }
    }

    &.hide {
      display: none;
    }

    &__avatar {
      margin: 0 auto;
      width: w = 7rem;
      height: w;

      img {
        border: none;
        padding: 0;
        border-radius: 50%;
      }
    }

    &__name {
      font-size: 1.2rem;
      font-weight: bold;
      color: #fff;
    }

    &__description {
      color: $a-link-color;
    }

    &-articles {
      padding: 0.2rem 0;

      .article-meta {
        display: block;
        overflow: hidden;
        margin-bottom: 0.4rem;
        padding: 0.2rem 0.4rem;
        height: 1.8rem;
        background: url('../../img/shattered-island.gif');
        color: $white;
        transition: all 0.2s ease-in-out;
        border-radius: 5px;

        &:hover {
          background: lighten($cyan, 8%);
        }

        .pull-right {
          position: relative;
          margin: -0.2rem -0.4rem;
          width: 2.5rem;
          height: 1.8rem;
          color: $white;
          text-align: center;
          line-height: 1.8rem;
          transition: all 0.2s ease-in-out;
        }
      }
    }

    &-links {
      &__title {
        margin-bottom: 0.4rem;
        font-size: 0.8rem;
      }

      &__name {
        position: relative;
        float: left;
        margin-right: 0.3rem;
        margin-bottom: 0.3rem;
        padding: 0 0.4rem 0 0.8rem;
        height: 1.3rem;
        background: $light-blue;
        color: $white;
        text-decoration: none;
        line-height: 1.3rem;
        transition: all 0.2s ease-in-out;

        &:hover {
          background: $ruby;
        }

        &:before {
          position: absolute;
          top: 50%;
          left: 0.25rem;
          margin-top: -0.15rem;
          width: w = 0.3rem;
          height: w;
          border-radius: w;
          background: $white;
          content: '';
        }
      }
    }
  }

  .sidebar-toc {
    padding: 0 0.5rem;

    ol, li {
      list-style: none;
    }

    ol {
      margin-top: 0.2rem;
      padding-left: 0.4rem;
    }

    &__title {
      padding-right: 0.5rem;
      text-align: center;
      font-size: unit(0.9 * $rem, 'px');
      margin: 1rem 0;
    }

    .toc-number {
      display: none;
    }

    .toc-link {
      display: block;
      padding-left: 0.2rem;
      border-right: 3px solid transparent;
      text-decoration: none;
      transition: all 0.2s ease-in-out;

      &.active {
        border-right-color: darken($cyan, 20%);
        background: $cyan;
        color: $white;
      }
    }

    &__progress {
      position: relative;
      margin-top: -0.3rem;
      padding-left: 0.6rem;
      color: $cyan;

      .progress-notice {
        margin-right: 0.4rem;
      }

      .progress-num {
        display: inline-block;
        min-width: 0.9rem;
      }

      &-bar {
        width: 0;
        height: 1px;
        background: $cyan;
      }
    }
  }
}
